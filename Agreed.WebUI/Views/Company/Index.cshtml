@model Agreed.WebUI.Models.ViewModels.CompanyViewModel
@{
    ViewData["Title"] = "Firmalar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="basic-vertical-layouts">
    <div class="row match-height">
        <div class="col-md-6 col-12">
            <div class="card" style="">
                <div class="card-header">
                    <h4 class="card-title">Firma Tanımlama</h4>
                </div>
                <div class="card-content">
                    <div class="card-body">

                        <form asp-controller="Company" asp-action="Index" method="post">
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="first-name-vertical">Firma Adı</label>
                                            <input name="companyName" type="text" class="form-control" placeholder="Firma Adı">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="email-id-vertical">Satıcı Id</label>
                                            <input type="text" class="form-control" placeholder="Satıcı Id">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <select class="custom-select form-control" id="location1" name="location">
                                                <option value="Trendyol">Trendyol</option>
                                                <option value="Hepsiburada">Hepsiburada</option>
                                                <option value="N11">N11</option>
                                                <option value="Gittigidiyor">Gittigidiyor</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="contact-info-vertical">API Key</label>
                                            <input type="text" id="contact-info-vertical" class="form-control" name="contact" placeholder="API Key">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="contact-info-vertical">API Secret</label>
                                            <input type="text" id="contact-info-vertical" class="form-control" name="contact" placeholder="API Secret">
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <button type="submit" class="btn btn-primary mr-1 mb-1 waves-effect waves-light btn-block">Kaydet</button>
                                        <button type="reset" class="btn btn-outline-warning mr-1 mb-1 waves-effect waves-light btn-block">Sıfırla</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-12">
            <div class="card" style="">
                <div class="card-header">
                    <h4 class="card-title">Kayıtlı Firmalar</h4>
                </div>
                <div class="card-content">
                    <div class="card-body">
                        <form class="form form-vertical">
                            <div class="form-body">
                                <div class="row">
                                    <table class="table table-bordered table-striped">
                                        <thead>
                                            <tr>

                                                <th>Şirket Adı</th>
                                                <th>Şirket Id</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.Companies.Count > 0)
                                            {
                                                foreach (var item in Model.Companies)
                                                {
                                            <tr>
                                                <td>@item.CompanyName</td>
                                                <td>@item.Id</td>

                                            </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@if (Model.ResultModel != null)
{
    <script type="text/javascript">

        window.onload = function () {
            var success = '@Model.ResultModel.Success';
            var message = '@Model.ResultModel.Message';

            if (success) {
                toastr.success(message, 'Başarılı!');
            }
            else {
                toastr.error(message, 'Başarısız!');
            }
        };

    </script>
}